        android:theme="@style/AppTheme">

        <!-- Parse meta data -->
        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="QWOzHAE85Qj63jgnuAukABOKuN8ut5AnVbfoNmX9"/>
